<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coggiri.main.mvc.repository.GroupRepository">
    <insert id="createGroup" parameterType="com.coggiri.main.mvc.domain.entity.Group" useGeneratedKeys="true" keyProperty="groupId" keyColumn="group_id">
        INSERT INTO groups(group_category,group_name,group_intro,group_rule,group_condition,group_number,thumbnail_path)
        Values(
            #{groupCategory},
            #{groupName},
            #{groupIntro},
            #{groupRule},
            #{groupCondition},
            #{groupNumber},
            #{thumbnailPath}
        );
    </insert>
    
    <select id="getGroupList" parameterType="map" resultType="com.coggiri.main.mvc.domain.dto.GroupInfoDTO">
        select
            group_id as groupId,
            group_category as groupCategory,
            group_name as groupName,
            group_number as groupNumber,
            thumbnail_path as thumbnailPath
        From groups
        where 1=1
        <if test="keyword != null and keyword != ''">
            AND group_name LIKE CONCAT('%',#{keyword},'%')
        </if>
        Order By group_id ASC
        LIMIT #{page} OFFSET #{offset}
    </select>

    <delete id="deleteGroup" parameterType="Integer">
        delete from groups
        where group_id = #{groupId};
    </delete>
</mapper>